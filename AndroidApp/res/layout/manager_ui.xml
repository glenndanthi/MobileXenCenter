<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<RelativeLayout android:id="@+id/toolbar"
		   android:layout_width="fill_parent"
    android:layout_height="44sp"
		        xmlns:android="http://schemas.android.com/apk/res/android">
		        <Button android:text="Add VM" android:id="@+id/newVM" style="@style/ToolbarButton"  android:layout_alignParentTop="true" android:layout_alignParentLeft="true" ></Button>
		        <Button android:text="Start" android:id="@+id/start" style="@style/ToolbarButton"  android:layout_alignParentTop="true" android:layout_toRightOf="@+id/newVM"></Button>
		        <Button android:text="Shutdown" android:id="@+id/shutDown" style="@style/ToolbarButton"  android:layout_alignParentTop="true" android:layout_toRightOf="@+id/start"></Button>
		        <Button android:text="Reboot" android:id="@+id/reboot" style="@style/ToolbarButton"  android:layout_alignParentTop="true" android:layout_toRightOf="@+id/shutDown"></Button>
		        <Button android:text="Logout" android:id="@+id/logout" style="@style/ToolbarButton"  android:layout_alignParentTop="true" android:layout_toRightOf="@+id/reboot" ></Button>		        
			</RelativeLayout>  
			
			<TextView android:id="@+id/blannk" android:layout_width="fill_parent"
                android:layout_height="10dip" android:text="     " android:gravity="center_vertical|right"
                android:textSize="17dip"></TextView>
			
			     
    <ExpandableListView android:id="@+id/listView"
                android:layout_width="fill_parent" android:layout_height="fill_parent" android:scrollbars="none"></ExpandableListView>   
</LinearLayout>
