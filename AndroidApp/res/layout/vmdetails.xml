<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<RelativeLayout android:id="@+id/toolbar"
		   android:layout_width="fill_parent"
    android:layout_height="44sp"
		        xmlns:android="http://schemas.android.com/apk/res/android">
		        <Button android:text="Start" android:id="@+id/start" style="@style/ToolbarButtonSmall"  android:layout_alignParentTop="true" android:layout_alignParentLeft="true" ></Button>
		        <Button android:text="Stop" android:id="@+id/stop" style="@style/ToolbarButtonSmall"  android:layout_alignParentTop="true" android:layout_toRightOf="@+id/start"></Button>
		        <Button android:text="Resume" android:id="@+id/resume" style="@style/ToolbarButtonLarge"  android:layout_alignParentTop="true" android:layout_toRightOf="@+id/stop"></Button>
		        <Button android:text="Suspend" android:id="@+id/suspend" style="@style/ToolbarButtonLarge"  android:layout_alignParentTop="true" android:layout_toRightOf="@+id/resume"></Button>
		        <Button android:text="Pause" android:id="@+id/pause" style="@style/ToolbarButtonSmall"  android:layout_alignParentTop="true" android:layout_toRightOf="@+id/suspend" ></Button>		        
		        <Button android:text="UnPause" android:id="@+id/unpause" style="@style/ToolbarButtonLargest"  android:layout_alignParentTop="true" android:layout_toRightOf="@+id/pause" ></Button>
			</RelativeLayout>  
			
			<TextView android:id="@+id/blannk" android:layout_width="fill_parent"
                android:layout_height="10dip" android:text="     " android:gravity="center_vertical|right"
                android:textSize="17dip"></TextView>

			<TextView
			    android:id="@+id/labelGeneral"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="General Information"
			    android:textAppearance="?android:attr/textAppearanceLarge" />
			
			<RelativeLayout android:id="@+id/l1" android:layout_width="fill_parent" android:layout_height="wrap_content" 
		        xmlns:android="http://schemas.android.com/apk/res/android">
		       				<TextView android:id="@+id/labelVmName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="		   VM Name:      " 
		       				    />

		       				<EditText
		       				    android:id="@+id/editTextVmName"
		       				    android:layout_width="wrap_content"
		       				    android:layout_height="wrap_content"
		       				    android:background="@android:drawable/editbox_background"
		       				    android:layout_toRightOf="@+id/labelVmName"
		       				    
		       				    >
		       				</EditText>
		    </RelativeLayout>
		    <RelativeLayout android:id="@+id/l2" android:layout_width="fill_parent" android:layout_height="wrap_content" 
		        xmlns:android="http://schemas.android.com/apk/res/android">
		       				
		       				<TextView android:id="@+id/labelVmDesc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="	  Description:   " 
		       				    android:layout_marginLeft="10px"/>

		       				<EditText
		       				    android:id="@+id/editTextVmDesc"
		       				    android:layout_width="wrap_content"
		       				    android:layout_height="wrap_content"
		       				   android:background="@android:drawable/editbox_background"
		       				    android:layout_toRightOf="@+id/labelVmDesc"
		       				     
		       				    >
		       				    </EditText>
		       				
			</RelativeLayout>
			
			 <RelativeLayout android:id="@+id/l3" android:layout_width="fill_parent" android:layout_height="wrap_content" 
		        xmlns:android="http://schemas.android.com/apk/res/android">
		       				
		       				<TextView android:id="@+id/labelCpuCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="	    VCPU Count:  " 
		       				    />

		       				<EditText
		       				    android:id="@+id/editTextCpuCount"
		       				    android:layout_width="wrap_content"
		       				    android:layout_height="wrap_content"
		       				   android:background="@android:drawable/editbox_background"
		       				    android:layout_toRightOf="@+id/labelCpuCount"
		       				     android:editable="false"
		       				     android:gravity="right"
		       				    >
		       				    </EditText>
		       				
			</RelativeLayout>
			<RelativeLayout android:id="@+id/l4" android:layout_width="fill_parent" android:layout_height="wrap_content" 
		        xmlns:android="http://schemas.android.com/apk/res/android">
		       				
		       				<TextView android:id="@+id/labelMemory" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="	    Memory:        " 
		       				    />

		       				<EditText
		       				    android:id="@+id/editTextMemory"
		       				    android:layout_width="wrap_content"
		       				    android:layout_height="wrap_content"
		       				    android:background="@android:drawable/editbox_background"
		       				    android:layout_toRightOf="@+id/labelMemory"
		       				     android:editable="false"
		       				    >
		       				    </EditText>
		       				
			</RelativeLayout>
			<Button
			    android:id="@+id/buttonUpdateGeneral"
			    android:layout_width="wrap_content"
			    android:layout_height="35dp"
			    android:text="Update" 
			    android:layout_marginLeft="240dp"
			    />
			    <TextView android:id="@+id/blannk" android:layout_width="fill_parent"
                android:layout_height="5dip" android:text="     " android:gravity="center_vertical|right"
                android:textSize="17dip"></TextView>
			    
			    
			    
			<TextView
			    android:id="@+id/labelMemory"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Memory Information"
			    android:textAppearance="?android:attr/textAppearanceLarge" />
       
			<RelativeLayout android:id="@+id/l5" android:layout_width="fill_parent" android:layout_height="wrap_content" 
		        xmlns:android="http://schemas.android.com/apk/res/android">
		       				<TextView android:id="@+id/labelStaticMin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="		   Static Min:          " 
		       				    />

		       				<EditText
		       				    android:id="@+id/editTextStaticMin"
		       				    android:layout_width="wrap_content"
		       				    android:layout_height="wrap_content"
		       				    android:background="@android:drawable/editbox_background"
		       				    android:layout_toRightOf="@+id/labelStaticMin"
		       				     
		       				    >
		       				</EditText>
		    </RelativeLayout>
		    <RelativeLayout android:id="@+id/l6" android:layout_width="fill_parent" android:layout_height="wrap_content" 
		        xmlns:android="http://schemas.android.com/apk/res/android">
		       				
		       				<TextView android:id="@+id/labelStaticMax" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="	  Static Max:         " 
		       				    android:layout_marginLeft="10px"/>

		       				<EditText
		       				    android:id="@+id/editTextStaticMax"
		       				    android:layout_width="wrap_content"
		       				    android:layout_height="wrap_content"
		       				    android:background="@android:drawable/editbox_background"
		       				    android:layout_toRightOf="@+id/labelStaticMax"
		       				     
		       				    >
		       				    </EditText>
		       				
			</RelativeLayout>
			
			 <RelativeLayout android:id="@+id/l7" android:layout_width="fill_parent" android:layout_height="wrap_content" 
		        xmlns:android="http://schemas.android.com/apk/res/android">
		       				
		       				<TextView android:id="@+id/labelDynamicMin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="	    Dynamic Min:    " 
		       				    />

		       				<EditText
		       				    android:id="@+id/editTextDynamicMin"
		       				    android:layout_width="wrap_content"
		       				    android:layout_height="wrap_content"
		       				    android:background="@android:drawable/editbox_background"
		       				    android:layout_toRightOf="@+id/labelDynamicMin"
		       				    
		       				    >
		       				    </EditText>
		       				
			</RelativeLayout>
			<RelativeLayout android:id="@+id/l8" android:layout_width="fill_parent" android:layout_height="wrap_content" 
		        xmlns:android="http://schemas.android.com/apk/res/android">
		       				
		       				<TextView android:id="@+id/labelDynamicMax" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="     Dynamic Max:   " 
		       				    />

		       				<EditText
		       				    android:id="@+id/editTextDynamicMax"
		       				    android:layout_width="wrap_content"
		       				    android:layout_height="wrap_content"
		       				    android:background="@android:drawable/editbox_background"
		       				    android:layout_toRightOf="@+id/labelDynamicMax"
		       				    
		       				    >
		       				    </EditText>
		       				
			</RelativeLayout>
<RelativeLayout android:id="@+id/l33" android:layout_width="fill_parent" android:layout_height="wrap_content" 
		        xmlns:android="http://schemas.android.com/apk/res/android">
			<Button
			    android:id="@+id/buttonUpdateMemory"
			    android:layout_width="wrap_content"
			    android:layout_height="35dp"
			    android:text="Update" 
			    android:layout_marginLeft="190dp"
			    />
			<Button
			    android:id="@+id/buttonBack"
			    android:layout_width="wrap_content"
			    android:layout_height="35dp"
			    android:text="BACK" 
			    android:layout_toRightOf="@+id/buttonUpdateMemory"
			    />
</RelativeLayout>
</LinearLayout>
