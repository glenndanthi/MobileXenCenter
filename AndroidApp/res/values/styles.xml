<?xml version="1.0" encoding="utf-8"?>
<resources>

        <style name="Toolbar">
                <item name="android:layout_width">fill_parent</item>
                <item name="android:layout_height">44sp</item>
                <item name="android:background">@drawable/toolbar_background</item>
        </style>

        <style name="ToolbarButton">
                <item name="android:layout_width">68sp</item>
                <item name="android:layout_height">44sp</item>
                <item name="android:background">@drawable/toolbar_background</item>
        </style>
        
            <style name="ToolbarButtonLarge">
                <item name="android:layout_width">65sp</item>
                <item name="android:layout_height">44sp</item>
                <item name="android:background">@drawable/toolbar_background</item>
        </style>
        <style name="ToolbarButtonSmall">
                <item name="android:layout_width">40sp</item>
                <item name="android:layout_height">44sp</item>
                <item name="android:background">@drawable/toolbar_background</item>
        </style>
		<style name="ToolbarButtonLargest">
                <item name="android:layout_width">72sp</item>
                <item name="android:layout_height">44sp</item>
                <item name="android:background">@drawable/toolbar_background</item>
        </style>
        <style name="ToolbarButtonRight" parent="@style/ToolbarButton">
                <item name="android:layout_alignParentRight">true</item>
        </style>

</resources>
